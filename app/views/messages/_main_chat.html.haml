.main_chat

  .main_chat__header
    .main_chat__header__group
      .main_chat__header__group__name 
        = @group.name
      .main_chat__header__group__members__names
        %ul.main_chat__header__group__members__names__member
          Member :
        %li.main_chat__header__group__members__names__nickname 
          - @group.group_users.each do |member|
            =member.user.name
    = link_to edit_group_path(@group.id), class: "main_chat__header__edit__btn" do
      Edit

  .message__field
    = render @messages
    
  .form__field
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__inputContent', placeholder: 'type a message'
        = f.label :image, class: 'Form__inputImage' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__submit'   
      




